{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["es2023", "dom", "dom.iterable"],
    "jsxImportSource": "hono/jsx"
  }
}
